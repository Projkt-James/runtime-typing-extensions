{
    "complieOnSave": true,
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "lib": ["es2015"],
        "declaration": true,

        "outDir": "./dist",

        "noImplicitAny": true,

        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "jest"
        ],
        "baseUrl": "./src",
        "paths": {
            "~/*": ["./src*"]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}